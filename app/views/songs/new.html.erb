<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />
  <%= f.collection_select(:genre_name, Genre.all, :name, :name) %>
  <br />
  <%= f.label :notes_1%>
  <input id = "song_notes_1" name = "song[note_contents][]",  %><br>
  <%= f.label :notes_2 %>
  <input id = "song_notes_2" name = "song[note_contents][]" %><br>
  <%= f.label :notes_3 %>
  <input id = "song_notes_3" name = "song[note_contents][]" %><br>
  <%= f.submit "Create Song" %>
<% end %>


